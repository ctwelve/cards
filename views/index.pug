doctype html
html

	head
		title Cards
		block icons

			//- industry-accepted "standard" icons
			link(rel="shortcut icon" href="/icons/favicon.ico")
			link(rel="icon" type="image/png" sizes="16x16" href="/icons/favicon-16x16.png")
			link(rel="icon" type="image/png" sizes="32x32" href="/icons/favicon-32x32.png")

			//- Android
			link(rel="icon" type="image/png" sizes="192x192" href="/icons/google/android-chrome-192x192.png")
			link(rel="manifest" href="/icons/google/site.webmanifest")

			//- Apple (iOS, iPadOS, macOS, etc.)
			link(rel="apple-touch-icon" sizes="180x180" href="/icons/apple/apple-touch-icon.png")
			link(rel="mask-icon" href="/icons/apple/safari-pinned-tab.svg" color="#000000")

			//- Windows Mobile + Metro tiles
			meta(name="msapplication-TileColor" content="#2d89ef")
			meta(name="msapplication-config" content="/icons/microsoft/browserconfig.xml")
			meta(name="theme-color" content="#cccccc")

	body
		h1 Hello World

